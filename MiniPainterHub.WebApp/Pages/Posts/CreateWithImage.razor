@page "/posts/new-with-image"
@attribute [Authorize]
@using MiniPainterHub.Common.DTOs
@inject IPostService PostService
@inject NavigationManager Nav

<h2 class="mb-4">Create Post with Image</h2>

<EditForm Model="@model" OnValidSubmit="HandleSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label class="form-label">Title</label>
        <InputText class="form-control" @bind-Value="model.Title" />
    </div>

    <div class="mb-3">
        <label class="form-label">Content</label>
        <InputTextArea class="form-control" rows="5" @bind-Value="model.Content" />
    </div>

    <div class="mb-3">
        <label class="form-label">Images</label>
        <InputFile OnChange="OnFilesSelected" multiple />
        @if (previewUrls.Count > 0)
        {
            foreach (var url in previewUrls)
            {
                <img src="@url" class="img-fluid rounded mt-2 me-2" style="max-height:200px;" />
            }
        }
    </div>

    <button type="submit" class="btn btn-primary">Create with Image</button>
    <button type="button" class="btn btn-secondary ms-2" @onclick="Cancel">Cancel</button>
</EditForm>

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger mt-3">@errorMessage</div>
}

@code {
    private CreatePostDto model = new();
    private IReadOnlyList<IBrowserFile> selectedFiles = Array.Empty<IBrowserFile>();
    private List<string> previewUrls = new();
    private string errorMessage = "";

    private void OnFilesSelected(InputFileChangeEventArgs e)
    {
        selectedFiles = e.GetMultipleFiles(5);
        previewUrls.Clear();
        foreach (var file in selectedFiles)
        {
            using var stream = file.OpenReadStream(5 * 1024 * 1024);
            var buffer = new byte[file.Size];
            stream.Read(buffer, 0, (int)file.Size);
            previewUrls.Add($"data:{file.ContentType};base64,{Convert.ToBase64String(buffer)}");
        }
    }

    private async Task HandleSubmit()
    {
        errorMessage = "";

        if (selectedFiles == null || selectedFiles.Count == 0)
        {
            errorMessage = "Please select at least one image.";
            return;
        }

        var content = new MultipartFormDataContent
    {
      { new StringContent(model.Title ?? ""),   nameof(model.Title) },
      { new StringContent(model.Content ?? ""), nameof(model.Content) }
    };
        foreach (var file in selectedFiles)
        {
            content.Add(new StreamContent(file.OpenReadStream(5 * 1024 * 1024)),
                        "Images", file.Name);
        }

        try
        {
            var created = await PostService.CreateWithImageAsync(content);
            Nav.NavigateTo($"/posts/{created.Id}");
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
    }

    private void Cancel() => Nav.NavigateTo("/");
}
