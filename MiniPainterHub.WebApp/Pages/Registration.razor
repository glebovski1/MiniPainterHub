@page "/register"
@inject IAuthService AuthService
@inject NavigationManager Nav

<EditForm Model="@registration" OnValidSubmit="HandleRegister">
    <div class="container">
        <div class="row justify-content-center align-items-center vh-100">
            <div class="col-12 col-sm-8 col-md-6 col-lg-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h4 class="card-title text-center mb-4">Register</h4>

                        <div class="mb-3">
                            <label for="reg-username" class="form-label">Username</label>
                            <InputText id="reg-username"
                                       class="form-control"
                                       @bind-Value="registration.UserName" />
                        </div>

                        <div class="mb-4">
                            <label for="reg-password" class="form-label">Password</label>
                            <InputText id="reg-password"
                                       type="password"
                                       class="form-control"
                                       @bind-Value="registration.Password" />
                        </div>

                        <button type="submit" class="btn btn-success w-100 mb-3">
                            Create Account
                        </button>

                        @if (!string.IsNullOrEmpty(msg))
                        {
                            <div class="alert alert-success text-center mb-0">@msg</div>
                        }

                        <div class="text-center mt-3">
                            <small>
                                Already have an account?
                                <NavLink href="login">Sign In</NavLink>
                            </small>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</EditForm>

@if (!string.IsNullOrEmpty(msg))
{
    <div>@msg</div>
}

@code {
    private RegisterDto registration = new();
    private string msg;

    private async Task HandleRegister()
    {
        var success = await AuthService.RegisterAsync(registration);
        if (success)
        {
            msg = "Registration successful! Please login.";
            Nav.NavigateTo("/login");
        }
        else
        {
            msg = "Registration failed.";
        }
    }
}