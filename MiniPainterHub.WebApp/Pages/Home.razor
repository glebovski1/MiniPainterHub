@page "/home"
@using MiniPainterHub.WebApp.Pages.Posts

<PageTitle>Best photos for last 30 days</PageTitle>

<div class="container py-5">
    <div class="row justify-content-center mb-4">
        <div class="col-lg-8 text-center">
            <h1 class="display-5 fw-bold mb-3">Discover the Community's Favourites</h1>
            <p class="lead text-muted mb-0">
                Explore the most inspiring miniatures shared over the past month. Dive in, enjoy the details,
                and celebrate the creativity of painters from around the world.
            </p>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-10 col-xl-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white py-3">
                    <div class="d-flex flex-column flex-md-row align-items-md-center justify-content-between">
                        <div>
                            <h2 class="h4 mb-1">Top Posts</h2>
                            <p class="text-muted mb-0">Curated selection of the highest-rated artwork.</p>
                        </div>
                        <div class="mt-3 mt-md-0">
                            <span class="badge bg-primary text-uppercase fw-semibold px-3 py-2">Updated Daily</span>
                        </div>
                    </div>
                </div>
                <div class="card-body p-0">
                    <div class="list-group list-group-flush">
                        <div class="list-group-item p-0">
                            <TopPosts />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
