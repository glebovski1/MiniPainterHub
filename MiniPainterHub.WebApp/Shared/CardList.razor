
@using MiniPainterHub.Common.DTOs
@inject IPostService PostService
@inject NavigationManager Nav

@if (isLoading)
{
    <div class="text-center">
        <div class="spinner-border" role="status"></div>
    </div>
}
else if (!posts.Any())
{
    <p class="text-muted">No posts yet.</p>
}
else
{
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var post in posts)
        {
            <div class="col">
                <PostCard Post="post" />
            </div>
        }
    </div>


}

@code {
    // The flat list your foreach iterates over
    private List<PostSummaryDto> posts = new();

    // Simple loading flag for the spinner
    private bool isLoading = true;

    // Page size (you can make this a variable or parameter)
    private const int PageSize = 9;

    public int _page = 1;

    [Parameter]
    public Func<IEnumerable<PostSummaryDto>, IEnumerable<PostSummaryDto>>? Query { get; set; } = (source) => source;

    protected override async Task OnInitializedAsync()
    {
        await LoadPosts();
    }

    protected override async Task OnParametersSetAsync()
    {
        await LoadPosts();
    }

    private async Task LoadPosts(int page = 1)
    {
        isLoading = true;

        // Call your service to fetch a PagedResult<PostSummaryDto>
        var result = await PostService.GetAllAsync(page, PageSize);

        // Extract the items into your flat list
        // posts = result.Items.OrderByDescending(posts => posts.CreatedAt).ToList();

        posts = Query != null ? Query.Invoke(result.Items).ToList() : result.Items.ToList();

        isLoading = false;
    }
}