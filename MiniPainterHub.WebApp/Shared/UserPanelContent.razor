@* Reusable content for the side panel and /me page *@
<div class="d-flex">
  <!-- Vertical nav pills -->
  <div class="nav flex-column nav-pills me-3" id="me-vtabs" role="tablist" aria-orientation="vertical">
    <button class="nav-link active" id="t-profile" data-bs-toggle="pill" data-bs-target="#p-profile" type="button" role="tab" aria-controls="p-profile" aria-selected="true">
      <i class="bi bi-person-circle me-1"></i> Profile
    </button>
    <button class="nav-link" id="t-posts" data-bs-toggle="pill" data-bs-target="#p-posts" type="button" role="tab" aria-controls="p-posts" aria-selected="false">
