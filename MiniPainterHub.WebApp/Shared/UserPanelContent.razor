    </button>
    <button class="nav-link" id="t-messages" data-bs-toggle="pill" data-bs-target="#p-messages" type="button" role="tab" aria-controls="p-messages" aria-selected="false">
      <i class="bi bi-chat-dots me-1"></i> Messages
    </button>
  </div>

  <!-- Tab panes -->
  <div class="tab-content flex-grow-1">
    <div class="tab-pane fade show active" id="p-profile" role="tabpanel" aria-labelledby="t-profile">
      @* <ProfileEditor /> *@
    </div>
    <div class="tab-pane fade" id="p-posts" role="tabpanel" aria-labelledby="t-posts">
      @* <MyPostsTable /> *@
    </div>
    <div class="tab-pane fade" id="p-messages" role="tabpanel" aria-labelledby="t-messages">
      @* <MessagesPane /> *@
    </div>
  </div>
</div>